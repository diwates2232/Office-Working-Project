function updateSummary(data) {
    document.getElementById("total-devices").textContent = data.summary?.totalDevices || "N/A";
    document.getElementById("online-devices").textContent = data.summary?.totalOnlineDevices || "N/A";
    document.getElementById("offline-devices").textContent = data.summary?.totalOfflineDevices || "N/A";
    document.getElementById("camera-summary").textContent = `${data.cameras?.total || "N/A"} (Online: ${data.cameras?.online || "N/A"}, Offline: ${data.cameras?.offline || "N/A"})`;
    document.getElementById("archiver-summary").textContent = `${data.archivers?.total || "N/A"} (Online: ${data.archivers?.online || "N/A"}, Offline: ${data.archivers?.offline || "N/A"})`;
    document.getElementById("controller-summary").textContent = `${data.controllers?.total || "N/A"} (Online: ${data.controllers?.online || "N/A"}, Offline: ${data.controllers?.offline || "N/A"})`;
    document.getElementById("server-summary").textContent = `${data.servers?.total || "N/A"} (Online: ${data.servers?.online || "N/A"}, Offline: ${data.servers?.offline || "N/A"})`;
}
